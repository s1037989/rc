function j { ${EDITOR:-joe} "$1" ; pushd $(dirname "$1") ; pushd $(git rev-parse --show-toplevel); echo -n "Commit? [Y/n] "; read -n1 yn; if [ "$yn" = "Y" -o "$yn" = "y" -o -z "$yn" ]; then echo -n "Commit Message: "; read commit; git commit -am "${commit:-quick commit}"; mkdir -p /tmp/github/spool/push; echo -n $(git rev-parse --show-toplevel) > /tmp/github/spool/push/$(basename $(git rev-parse --show-toplevel)); else mkdir -p /tmp/github/spool/commit; echo -n $(git rev-parse --show-toplevel) > /tmp/github/spool/commit/$(basename $(git rev-parse --show-toplevel)); fi; popd; popd; }
function commit-all { for i in /tmp/github/spool/commit/*; do pushd $(cat $i); git status; echo "Commit Message:"; read commit; git commit -am "${commit:-quick commit}"; rm -f $i; done; }
function push-all { for i in /tmp/github/spool/push/*; do pushd $(cat $i); git status; git push -u origin master; rm -f $i; done; }
